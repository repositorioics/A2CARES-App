<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/WizardPageContainer">

    <TextView style="@style/WizardPageTitleVertical"
		android:text="@string/control_asistencia_sample_title"/>

	<ScrollView
		android:layout_width="385dp"
		android:layout_height="220dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				style="@style/WizardFormLabel"
				android:text="@string/usuarioa2cares" />

			<TextView
				style="@style/WizardFormLabelPrincipal"
				android:layout_marginLeft="100dp"
				android:layout_marginRight="150dp"
				android:text="@string/usuarioa2cares" />

			<TextView
				style="@style/WizardFormLabel"
				android:text="@string/fechaControlAsistencia" />

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="20dp"
				android:orientation="horizontal">

				<EditText
					android:id="@+id/inputFechaAsistencia"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:focusable="false"
					android:inputType="text" />

			</LinearLayout>

			<TextView
				style="@style/WizardFormLabel"
				android:text="@string/horaControlAsistencia" />

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="20dp"
				android:orientation="horizontal">

				<EditText
					android:id="@+id/inputHoraAsistencia"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:focusable="false"
					android:inputType="text" />

			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.activities.enterdata.NuevoControlAsistenciaActivity" >

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:orientation="horizontal"
				android:paddingLeft="6dip"
				android:paddingRight="6dip"
				android:paddingTop="8dip"
				android:paddingBottom="2dip">
				<EditText android:id="@+id/latitud"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:focusable="false"
					android:inputType="text"
					android:visibility="invisible"/>
				<EditText android:id="@+id/longitud"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:focusable="false"
					android:inputType="text"
					android:visibility="invisible"/>

			</LinearLayout>

		</LinearLayout>
	</FrameLayout>
</LinearLayout>
